---
import Layout from "../../layouts/Layout.astro";
import GraphicSpecies from "../../components/GraphicSpecies.astro";
---

<Layout>
  <main class="max-w-5xl mx-auto px-4 py-8">
    <div class="bg-blue-600 text-white p-6 mb-8 rounded">
      <h1 class="text-2xl font-bold text-center mb-2">Penguins Chinstrap</h1>
      <p class="text-center text-blue-100">Analyse morphologique de l’espèce Chinstrap</p>
    </div>

    <nav class="mb-8 text-center">
      <select id="species" class="border rounded p-1 text-sm md:text-base">
        <option value="Adelie">Adelie</option>
        <option value="Gentoo">Gentoo</option>
        <option value="Chinstrap" selected>Chinstrap</option>
      </select>
    </nav>

    <script>
      document.querySelector("#species")?.addEventListener("change", (evt) => {
        const value = evt.target.value;
        location.pathname = "/species/" + value;
      });
    </script>

    <GraphicSpecies species="Chinstrap" />
  </main>
</Layout>
